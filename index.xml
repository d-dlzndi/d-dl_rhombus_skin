<?xml version="1.0" encoding="utf-8"?>
<skin>
    <information>
        <name>d-dl rhombus skin</name>
        <!-- 스킨의 이름 -->
        <version>0.1</version>
        <!-- 스킨의 버전 -->
        <description>
            <!-- 스킨의 상세 설명 -->
            <![CDATA[마름모만 고집한 단순한 스킨.]]>
        </description>
        <license>
            <!-- 스킨의 라이센스 -->
            <![CDATA[copyright를 제외하고 자유로운 수정이 가능합니다. 단, 재배포는 불가합니다. 질문은 스킨 배포 페이지를 통해 해주세요.]]>
        </license>
    </information>
    <author>
        <name>ㅓㅇ</name>
        <!-- 스킨 제작자 이름 -->
        <homepage>https://d-dl.tistory.com</homepage>
        <!-- 스킨 제작자 홈페이지 -->
        <email>d.dlzndi@gmail.com</email>
        <!-- 스킨 제작자 이메일 주소 -->
    </author>
    <default>
        <recentEntries>5</recentEntries>
        <!-- 사이드바의 최근글 표시 갯수 -->
        <recentComments>5</recentComments>
        <!-- 사이드바의 최근 댓글 표시 갯수 -->
        <recentTrackbacks>5</recentTrackbacks>
        <!-- 사이드바의 최근 트랙백 표시 갯수 -->
        <itemsOnGuestbook>10</itemsOnGuestbook>
        <!-- 한페이지에 표시될 방명록 갯수 -->
        <tagsInCloud>30</tagsInCloud>
        <!-- 사이드바에 표시될 태그 갯수 -->
        <sortInCloud>3</sortInCloud>
        <!-- 태그 클라우드 표현 방식 (1:인기도순, 2:이름순, 3:랜덤) -->
        <expandComment>0</expandComment>
        <!-- 댓글영역 표현 방식 (0:감추기, 1:펼치기) -->
        <expandTrackback>0</expandTrackback>
        <!-- 트랙백영역 표현 방식 (0:감추기, 1:펼치기) -->
        <lengthOfRecentNotice>25</lengthOfRecentNotice>
        <!-- 최근 공지 표현될 글자수 -->
        <lengthOfRecentEntry>27</lengthOfRecentEntry>
        <!-- 최근 글 표현될 글자수 -->
        <lengthOfRecentComment>30</lengthOfRecentComment>
        <!-- 최근 댓글에 표현될 글자수 -->
        <lengthOfRecentTrackback>30</lengthOfRecentTrackback>
        <!-- 최근 트랙백에 표현될 글자수 -->
        <lengthOfLink>30</lengthOfLink>
        <!-- 링크에 표현될 글자수 -->
        <showListOnArchive>1</showListOnArchive>
        <!-- 홈에서 목록 표현(0:내용만, 1:목록만, 2: 내용+목록) -->
        <showListOnCategory>2</showListOnCategory>
        <!-- 기본 글 목록 표현(0:내용만, 1:목록만, 2: 내용+목록) -->
        <commentMessage>
            <none>댓글이 없습니다.</none>
            <!-- 댓글이 하나도 없을때 -->
            <single>댓글 &lt;span class="cnt"&gt;하나&lt;/span&gt; 달렸습니다.</single>
            <!-- 댓글이 하나 있을때 -->
        </commentMessage>
        <trackbackMessage>
            <none>받은 트랙백이 없고</none>
            <!-- 트랙백 표현 방법 -->
            <single>트랙백이 &lt;span class="cnt"&gt;하나&lt;/span&gt;이고</single>
            <!-- 트랙백이 하나도 없을때 -->
        </trackbackMessage>
        <tree>
            <color>000000</color>
            <!-- 댓글이 하나 있을때 -->
            <bgColor>ffffff</bgColor>
            <!-- 카테고리 배경색 -->
            <activeColor>000000</activeColor>
            <!-- 선택시 글자색 -->
            <activeBgColor>eeeeee</activeBgColor>
            <!-- 선택시 배경색 -->
            <labelLength>27</labelLength>
            <!-- 표현될 카테고리 글자 수 -->
            <showValue>1</showValue>
            <!-- 카테고리 글 수 표현(0:숨김, 1:보임) -->
        </tree>
        <contentWidth>700</contentWidth>
        <!-- 콘텐츠영역 가로 사이즈, 이 사이즈에 맞춰 에디터의 위지윅이 제대로 구현된다. -->
        <liststyle>thumbnail</liststyle>
    </default>
    <liststyle>
        <item>
            <label>썸네일</label>
            <value>thumbnail</value>
        </item>
        <item>
            <label>글목록</label>
            <value>list-style</value>
        </item>
    </liststyle>
    <variables>
        <!--추가-->
        <variablegroup name="배경 설정">
            <variable>
                <name>con-width</name>
                <label>
                    <![CDATA[ 기본 넓이 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>700px</default>
                <description>
                    <![CDATA[ PC에서 본문(글 부분만)의 넓이를 설정해주세요.(기본값 700px) ]]>
                </description>
            </variable>
            <variable>
                <name>bg-img</name>
                <label>
                    <![CDATA[ 기본 이미지(링크 형식) ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>https://blog.kakaocdn.net/dn/bAepxv/btqQJDHxOQJ/cmko0nZwIZkLtt0J48fd8k/img.jpg</default>
                <description>
                    <![CDATA[ 배경 이미지를 설정합니다. ]]>
                </description>
            </variable>
        </variablegroup>
        <variablegroup name="사이드바 아이콘">
            <variable>
                <name>icon-guest</name>
                <label>
                    <![CDATA[ 방명록 아이콘 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>&lt;i class=&quot;fas fa-book&quot;&gt;&lt;/i&gt;</default>
            </variable>
            <variable>
                <name>icon-tag</name>
                <label>
                    <![CDATA[ 태그 클라우드 아이콘 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>&lt;i class=&quot;fas fa-hashtag&quot;&gt;&lt;/i&gt;</default>
            </variable>
            <variable>
                <name>icon-home</name>
                <label>
                    <![CDATA[ 홈 아이콘 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>&lt;i class=&quot;fas fa-home&quot;&gt;&lt;/i&gt;</default>
            </variable>
            <variable>
                <name>icon-category</name>
                <label>
                    <![CDATA[ 카테고리 아이콘 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>&lt;i class=&quot;fas fa-ellipsis-v&quot;&gt;&lt;/i&gt;</default>
            </variable>
            <variable>
                <name>icon-page</name>
                <label>
                    <![CDATA[ 페이지 아이콘 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>&lt;i class=&quot;fas fa-paper-plane&quot;&gt;&lt;/i&gt;</default>
            </variable>
            <variable>
                <name>icon-notice</name>
                <label>
                    <![CDATA[ 공지 아이콘 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default>&lt;i class=&quot;fas fa-microphone&quot;&gt;&lt;/i&gt;</default>
            </variable>
        </variablegroup>
        <variablegroup name="색상 설정">
            <variable>
                <name>base-color</name>
                <label>
                    <![CDATA[ 배경색 ]]>
                </label>
                <type>COLOR</type>
                <option />
                <default>#eee</default>
                <description>
                    <![CDATA[ 배경색을 설정합니다. ]]>
                </description>
            </variable>
            <variable>
                <name>color-color</name>
                <label>
                    <![CDATA[ 글자색 ]]>
                </label>
                <type>COLOR</type>
                <option />
                <default>#333</default>
                <description>
                    <![CDATA[ 글자색을 설정합니다. ]]>
                </description>
            </variable>
            <variable>
                <name>point-color</name>
                <label>
                    <![CDATA[ 포인트색 ]]>
                </label>
                <type>COLOR</type>
                <option />
                <default>#f78339</default>
                <description>
                    <![CDATA[ 포인트색을 설정합니다. 배경색 위에서도, 글자색 위에서도 눈에 띄는 색을 추천합니다. ]]>
                </description>
            </variable>
        </variablegroup>
        <variablegroup name="기타 설정">
            <variable>
                <name>use-sidebg</name>
                <label>
                    <![CDATA[ 사이드바 배경 사용 여부 ]]>
                </label>
                <type>BOOL</type>
                <option />
                <default>true</default>
                <description>
                    <![CDATA[ 사이드바 배경에 사진을 덧씌울지 여부를 결정합니다. ]]>
                </description>
            </variable>
            <variable>
                <name>use-index</name>
                <label>
                    <![CDATA[ 목차 사용 여부 ]]>
                </label>
                <type>BOOL</type>
                <option />
                <default>true</default>
                <description>
                    <![CDATA[ PC에서 목차 자동 생성 여부를 결정합니다. ]]>
                </description>
            </variable>
        </variablegroup>
        <variablegroup name="SNS 설정">
            <variable>
                <name>github-id</name>
                <label>
                    <![CDATA[ 깃허브 아이디 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default></default>
            </variable>
            <variable>
                <name>facebook-id</name>
                <label>
                    <![CDATA[ 페이스북 아이디 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default></default>
            </variable>
            <variable>
                <name>twitter-id</name>
                <label>
                    <![CDATA[ 트위터 아이디 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default></default>
            </variable>
            <variable>
                <name>instagram-id</name>
                <label>
                    <![CDATA[ 인스타그램 아이디 ]]>
                </label>
                <type>STRING</type>
                <option />
                <default></default>
            </variable>
        </variablegroup>
    </variables>
</skin>
